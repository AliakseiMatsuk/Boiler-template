.l-socials
  display flex
  margin-right -10px

  &__social
    padding-right 10px
  &__link
    display inline-flex
    justify-content center
    align-items center
    width 40px
    height 40px
    border 2px solid $border-color-light
    border-radius 50%
    background-color transparent
    color $text-color-light
    opacity .4

    .desktop &
      transition background-color .3s ease-out, opacity .3s ease-out

      &:hover
        background-color $bg-color-light
        opacity 1

        .l-socials__icon
          fill $base
  &__icon
    width 20px
    height 16px
    fill $light

    .desktop &
      transition fill .3s ease-out
