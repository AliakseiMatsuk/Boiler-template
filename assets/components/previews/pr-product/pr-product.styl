.pr-product
  display block

  .desktop &
    &:hover
      .pr-product
        &__inner
          &:after
            opacity 1
        &__description
          text-decoration underline
  &._dark
    background-color $bg-color-primary-deep
  &._light
    background-color $bg-color-secondary
  &._medium
    background-color $bg-color-secondary-deep
  &__inner
    position relative
    overflow hidden
    padding-top 100%

    &:after
      hv()

      background rgba($bg-color-base, .1)
      opacity 0

      tro(.3s)
  &__layout
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__logo
    position absolute
    top -10%
    left -8%
    z-index 1

    &.svg-logo-mcloud
      top 12%
      left 12%
  &__content
    position absolute
    bottom 0
    z-index 1
    padding 9% 9% 9% 11%
    color $text-color-light

+media-tablet()
  .pr-product
    &__inner
      &:after
        opacity 1
