.pr-project
  display block

  .desktop &
    &:hover
      .pr-project
        &__inner
          &:after
            opacity 1
        &__description
          text-decoration underline
        &__layout
          transform scale(1.1)
  &__inner
    position relative
    overflow hidden
    padding-top 55%

    &:before,
    &:after
      ps()

      z-index 1
    &:before
      bottom 0
      left 0
      width 100%
      height 45%
      background linear-gradient(180deg, transparent 3%, rgba($bg-color-base, .15) 38%, rgba($bg-color-base, .2) 44%, rgba($bg-color-base, .27) 53%, rgba($bg-color-base, .55) 99%)
    &:after
      top 0
      right 0
      bottom 0
      left 0
      background rgba($bg-color-base, .35)
      opacity 0

      tro(.3s)
  &__layout
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transform-origin center

    .desktop &
      will-change transform

      trt(.3s)
  &__description
    position absolute
    right 0
    bottom 0
    left 0
    z-index 2
    padding 5%
    color $text-color-light
    font-weight $font-weight-semibold-text
    font-size $font-size-big-desktop
    line-height 1.5
+media-tablet()
  .pr-project
    &__inner
      &:after
        opacity 1