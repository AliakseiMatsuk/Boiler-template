.b-toggle
  &._vertical
    &:not(:first-child)
      margin-top 15px
  &__wrapper
    position relative
    display inline-block
    padding-left 26px
    cursor pointer
  &__input
    position absolute
    overflow hidden
    width 0
    height 0
    opacity 0

    &:checked
      & + .b-toggle__element
        border-color $border-color-primary
        background-color $bg-color-primary
    &[disabled]
      & + .b-toggle__element
        border-color rgba($border-color-lighter, .5)
        cursor not-allowed

        & + .b-toggle__text
          color rgba($text-color-lighter, .5)
          cursor not-allowed
  &__element
    position absolute
    top 2px
    left 0
    width 16px
    height 16px
    border 1px solid $bg-color-light
    border-radius 50%
    background-color transparent

    trbgb(.3s, .3s)
  .desktop &
    &:hover,
    &._hover
      .b-toggle__input:not([disabled])
        + .b-toggle__element
          border-color $border-color-primary
