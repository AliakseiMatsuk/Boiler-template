.b-card
  position relative
  padding-top 98.22%
  border 2px solid $border-color-light
  background-color $bg-color-lighter
  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left 0
  &__title
    overflow hidden
    padding 0 10px
    max-height 60px
    text-align center
    color $text-color-darker
    font-size $font-size-medium-desktop
    line-height 30px
    /* stylelint-disable */
    display -webkit-box
    -webkit-line-clamp 2
    -webkit-box-orient vertical
    /* stylelint-enable */
  &__icon
    display flex
    justify-content center
    align-items center
    height 60%
    .svg
      fill $bg-color-secondary