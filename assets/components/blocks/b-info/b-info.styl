.b-info
  position relative
  padding-top 75%
  border-right 2px solid $border-color-lighter
  border-bottom 2px solid $border-color-lighter
  &__content
    position absolute
    top 0
    right 0
    bottom 0
    left 0
  &__title
    display -webkit-box /* stylelint-ignore */
    overflow hidden
    padding 0 10px
    max-height 60px
    color $text-color-darker
    text-align center
    font-size $font-size-medium-desktop
    line-height 30px
    -webkit-line-clamp 2 /* stylelint-ignore */
    -webkit-box-orient vertical /* stylelint-ignore */
  &__icon
    display flex
    justify-content center
    align-items center
    height 60%
    .svg
      fill $secondary