.m-primary
  &__item
    position relative

    &:not(:last-child)
      margin-right 68px
    .desktop &._dropdown
      &:hover
        .m-primary__dropdown
          visibility visible
          opacity 1
  &__list
    display flex
    align-items center
  &__link
    position relative
    display block
    padding 12px 0 11px
    color $text-color-base
    font-size $font-size-xsmall-desktop

    .desktop &
      &:hover
        &:before
          transform scale(1)
    &:before
      trt()

      position absolute
      bottom 0
      left 0
      display block
      width 100%
      height 2px
      background-color currentColor
      content ''
      transform scale(0)
  &__dropdown
    position absolute
    top 100%
    left 0
    z-index 4
    visibility hidden
    margin 0
    min-height 165px
    opacity 0

    tro()

    display flex
    flex-wrap wrap
    padding 25px 20px 35px
    min-width 800px
    background-color $bg-color-light

    &-item
      fw(50%)
    &-link
      display flex
      align-items center
      color $text-color-light-dark
      font-size $font-size-xsmall-desktop
      line-height $line-height-regular

      .desktop &
        trc()
        &:hover
          color $text-color-base
      &-icon
        transition fill .3s
        fill currentColor
