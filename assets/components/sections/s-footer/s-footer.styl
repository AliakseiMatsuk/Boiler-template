.s-footer
  padding 30px 0 57px
  background-color $bg-color-base

  &__row
    display flex
    justify-content space-between
    margin-right -20px
  &__col
    padding-right 20px

    &._columned
      display flex
      flex-direction column
  &__logo
    margin-top 5px
    width 137px
    height 30px
  &__copyright
    margin auto 0 5px
    letter-spacing -.02em

    &-link
      color $text-color-darker
      font-size $font-size-xxsmall-desktop
      line-height $line-height-medium

      .desktop &
        &:hover
          text-decoration underline
  &__title
    margin-bottom 36px
  &__addresses
    display flex
    margin 0 -15px

    &-item
      padding 0 15px
  &__socials
    margin auto 0 5px
