.s-intro
  position relative
  margin 0 auto
  max-width 1920px
  height 560px
  background-color $bg-color-primary-deep

  &__image
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity .3
  &__wrapper
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display flex
    align-items center
  &__subtitle
    margin-top 35px
