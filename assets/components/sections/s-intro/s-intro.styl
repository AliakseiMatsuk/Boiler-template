.s-intro
  position relative
  padding-top 36.7%
  background-color $bg-color-primary-deep
  &__image
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity .3
  &__wrapper
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display flex
    align-items center
  &__container
    width 100%
  &__title
    max-width 850px
    color $text-color-light
    font-weight $font-weight-light-text
    font-size 9.6rem
    line-height 1