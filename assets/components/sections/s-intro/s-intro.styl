.s-intro
  position relative
  padding-top 37.4%
  background-color $bg-color-primary-deep

  &__image
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity .3
  &__wrapper
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display flex
    align-items center
  &__container
    width 100%
  &__inner
    max-width 850px
  &__title
    color $text-color-light
    font-weight $font-weight-light-text
    font-size 9.6rem
    line-height 1
  &__subtitle
    margin-top 35px
    color $text-color-light
    letter-spacing -.2px
    font-size $font-size-big-desktop
    line-height 30px